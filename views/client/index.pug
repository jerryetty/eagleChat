doctype html
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title=title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', media='screen', href='css/client.css')

.chat_box
    .chat_box_title EagleChat
    .contentArea(style='display: none')
        .formArea
            .form_title Please fill out this form
            form.inputFields
                .inputContainer
                    input#nameInput(type='text', maxlength='20', pattern='^[a-zA-Z ]{3,}', placeholder='Name', required='false' autofocus="true" value="Guest")
                input#submit.submitBtn(type='submit')
        .chatArea(style='display: none')
            #messages
                .old_msg
                .new_msg
            .typing
            input#inputMessage.inputMessage(rows='1', placeholder='Type here...')
script(src='https://code.jquery.com/jquery-3.3.1.min.js')
script(src='http://localhost:3201/socket.io/socket.io.js')
script(src="js/client/index.js")